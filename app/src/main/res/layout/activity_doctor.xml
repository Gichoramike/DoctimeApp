                    />

                <TextView
                    android:layout_width="150dp"
                    android:layout_height="30dp"
                    android:text="Dr.Wangare"
                    android:layout_marginTop="20dp"
                    android:fontFamily="@font/poppins_medium"
                    android:textSize="14sp"
                    android:layout_marginStart="100dp"/>

                <TextView
                    android:layout_width="150dp"
                    android:layout_height="20dp"
                    android:text="Dentist"
                    android:layout_marginTop="35dp"
                    android:fontFamily="@font/poppins_medium"
                    android:textSize="14sp"
                    android:layout_marginStart="100dp"/>
                <RatingBar
                    style="?android:attr/ratingBarStyleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:numStars="5"
                    android:rating="3.5"
                    android:layout_marginStart="100dp"
                    android:layout_marginTop="55dp"
                    android:progressTint="@color/filled_star_color"/>

                <Button
                    android:id="@+id/scheduleBtn3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Schedule"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="220dp"
                    android:layout_marginRight="10dp"
                    android:backgroundTint="@color/blue"/>


            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/tpDoctorcard4"
                android:layout_width="345dp"
                android:layout_height="90dp"
                android:backgroundTint="@color/white"
                app:cardCornerRadius="23dp"
                android:layout_marginLeft="2dp"
                android:layout_marginTop="15dp"
                android:layout_below="@+id/tpDoctorcard3">

                <de.hdodenhof.circleimageview.CircleImageView
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/doc_pic4"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/user"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="20dp"
                    />

                <TextView
                    android:layout_width="150dp"
                    android:layout_height="30dp"
                    android:text="Dr.Wangare"
                    android:layout_marginTop="20dp"
                    android:fontFamily="@font/poppins_medium"
                    android:textSize="14sp"
                    android:layout_marginStart="100dp"/>

                <TextView
                    android:layout_width="150dp"
                    android:layout_height="20dp"
                    android:text="Dentist"
                    android:layout_marginTop="35dp"
                    android:fontFamily="@font/poppins_medium"
                    android:textSize="14sp"
                    android:layout_marginStart="100dp"/>
                <RatingBar
                    style="?android:attr/ratingBarStyleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:numStars="5"
                    android:rating="3.5"
                    android:layout_marginStart="100dp"
                    android:layout_marginTop="55dp"
                    android:progressTint="@color/filled_star_color"/>

                <Button
                    android:id="@+id/scheduleBtn4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Schedule"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="220dp"
                    android:layout_marginRight="10dp"
                    android:backgroundTint="@color/blue"/>


            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/tpDoctorcard5"
                android:layout_width="345dp"
                android:layout_height="90dp"
                android:backgroundTint="@color/white"
                app:cardCornerRadius="23dp"
                android:layout_marginLeft="2dp"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="20dp"
                android:layout_below="@+id/tpDoctorcard4">

                <de.hdodenhof.circleimageview.CircleImageView
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/doc_pic5"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/user"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="20dp"
                    />

                <TextView
                    android:layout_width="150dp"
                    android:layout_height="30dp"
                    android:text="Dr.Wangare"
                    android:layout_marginTop="20dp"
                    android:fontFamily="@font/poppins_medium"
                    android:textSize="14sp"
                    android:layout_marginStart="100dp"/>

                <TextView
                    android:layout_width="150dp"
                    android:layout_height="20dp"
                    android:text="Dentist"
                    android:layout_marginTop="35dp"
                    android:fontFamily="@font/poppins_medium"
                    android:textSize="14sp"
                    android:layout_marginStart="100dp"/>
                <RatingBar
                    style="?android:attr/ratingBarStyleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:numStars="5"
                    android:rating="3"
                    android:layout_marginStart="100dp"
                    android:layout_marginTop="55dp"
                    android:progressTint="@color/filled_star_color"/>

                <Button
                    android:id="@+id/scheduleBtn5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Schedule"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="220dp"
                    android:layout_marginRight="10dp"
                    android:backgroundTint="@color/blue"/>


            </androidx.cardview.widget.CardView>




        </LinearLayout>

    </ScrollView>



</RelativeLayout>