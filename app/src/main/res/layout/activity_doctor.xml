<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DoctorActivity"
    android:background="@color/white">

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/nav_view"
        style="@style/Widget.Design.BottomNavigationView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/blue"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="700dp"
        app:itemTextColor="@color/white"
        app:itemIconTint="@color/white"
        app:elevation="6dp"
        app:labelVisibilityMode="labeled"
        app:itemActiveIndicatorStyle="@color/black"
        app:menu="@menu/bottom_nav_menu"
        android:elevation="2dp"/>

    <TextView
        android:id="@+id/title_doctor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Doctors"
        android:textColor="@color/black"
        android:fontFamily="@font/poppins_medium"
        android:textSize="24sp"
        android:layout_marginTop="50dp"
        android:layout_marginStart="20dp"/>

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_below="@+id/title_doctor"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true">

        <LinearLayout
            android:layout_width="350dp"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:id="@+id/tpDoctorcard1"
                android:layout_width="345dp"
                android:layout_height="90dp"
                android:backgroundTint="@color/white"
                app:cardCornerRadius="23dp"
                android:layout_marginTop="10dp"
                android:layout_gravity="center_horizontal"
                android:layout_below="@+id/title_doctor">

                <de.hdodenhof.circleimageview.CircleImageView
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/doc_pic1"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/user"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="20dp"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:text="Dr.Wangare"
                    android:layout_marginTop="20dp"
                    android:fontFamily="@font/poppins_medium"
                    android:textSize="14sp"
                    android:layout_marginStart="100dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:text="Dentist"
                    android:layout_marginTop="35dp"
                    android:fontFamily="@font/poppins_medium"
                    android:textSize="14sp"
                    android:layout_marginStart="100dp"/>
                <RatingBar
                    style="?android:attr/ratingBarStyleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:numStars="5"
                    android:rating="4.5"
                    android:layout_marginStart="100dp"
                    android:layout_marginTop="55dp"
                    android:progressTint="@color/filled_star_color"/>

                <Button
                    android:id="@+id/scheduleBtn1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Schedule"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="220dp"
                    android:layout_marginRight="10dp"
                    android:backgroundTint="@color/blue"/>


            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/tpDoctorcard2"
                android:layout_width="345dp"
                android:layout_height="90dp"
                android:backgroundTint="@color/white"
                app:cardCornerRadius="23dp"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="2dp"
                android:layout_below="@+id/tpDoctorcard1">

                <de.hdodenhof.circleimageview.CircleImageView
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/doc_pic2"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/user"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="20dp"
                    />

                <TextView
                    android:layout_width="150dp"
                    android:layout_height="30dp"
                    android:text="Dr.Wangare"
                    android:layout_marginTop="20dp"
                    android:fontFamily="@font/poppins_medium"
                    android:textSize="14sp"
                    android:layout_marginStart="100dp"/>

                <TextView
                    android:layout_width="150dp"
                    android:layout_height="20dp"
                    android:text="Dentist"
                    android:layout_marginTop="35dp"
                    android:fontFamily="@font/poppins_medium"
                    android:textSize="14sp"
                    android:layout_marginStart="100dp"/>
                <RatingBar
                    style="?android:attr/ratingBarStyleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:numStars="5"
                    android:rating="4"
                    android:layout_marginStart="100dp"
                    android:layout_marginTop="55dp"
                    android:progressTint="@color/filled_star_color"/>

                <Button
                    android:id="@+id/scheduleBtn2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="220dp"
                    android:layout_marginRight="10dp"
                    android:backgroundTint="@color/blue"
                    android:text="Schedule" />


            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/tpDoctorcard3"
                android:layout_width="345dp"
                android:layout_height="90dp"
                android:backgroundTint="@color/white"
                app:cardCornerRadius="23dp"
                android:layout_marginLeft="2dp"
                android:layout_marginTop="15dp"
                android:layout_below="@+id/tpDoctorcard2">

                <de.hdodenhof.circleimageview.CircleImageView
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/doc_pic3"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/user"
